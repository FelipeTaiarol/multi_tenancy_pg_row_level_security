{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es6",
            "dom",
            "es2017"
        ],
        "target": "es5",
        "types": [
            "reflect-metadata"
        ],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "watch": true,
        "downlevelIteration": true
    },
    "exclude": [
        "node_modules"
    ]
}